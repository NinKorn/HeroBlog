/* pages/my/my.wxss */
.my {
  background-color: #f8f8f9;
}
.user-img {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%; 
  padding: 40px 0;
  background: -webkit-linear-gradient(top, #002661,#92FFC0);
  /* background: -webkit-linear-gradient(top, #90F7EC,#32CCBC); */
}
.img{
  width: 80px;
  height: 80px;
  border-radius: 50%;
}
.nick-name {
  padding: 10px;
  color: #fff;
  font-weight: 600;
}
.user-info {
  background-color: #fff;
}
.user-info .info-item {
  font-size: 16px;
  display: block;
  padding: 10px;
  border-bottom: 1px solid #e9eaec;
  color: #495060;
  font-weight: 500;
}
.user-info .info-item .item {
  font-size: 14px;
  font-weight: 400;
  color: #5cadff;
}
.about {
  margin-top: 20px;
  border-top:  1px solid #e9eaec;
  background-color: #fff;
}
.about-item {
  display: block;
  padding: 10px;
  font-size: 16px;
  color: #80848f;
   border-bottom: 1px solid #e9eaec;
}
